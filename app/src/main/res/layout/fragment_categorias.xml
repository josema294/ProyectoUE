<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ImageButton
        android:id="@+id/cateogoria_vodka"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginEnd="4dp"
        android:background="@android:color/transparent"
        android:contentDescription="Vodka"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/cateogoria_ron"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toEndOf="@+id/cateogoria_ron"
        app:srcCompat="@drawable/vodkaa" />

    <ImageButton
        android:id="@+id/cateogoria_ron"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/Rum"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.03"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.196"
        app:srcCompat="@drawable/ron2" />

    <ImageButton
        android:id="@+id/cateogoria_gin"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/Without"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/cateogoria_ron"
        app:layout_constraintStart_toStartOf="@+id/cateogoria_ron"
        app:layout_constraintTop_toBottomOf="@+id/cateogoria_ron"
        app:srcCompat="@drawable/gin2" />

    <ImageButton
        android:id="@+id/cateogoria_sin"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/Without"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="@+id/cateogoria_gin"
        app:layout_constraintEnd_toEndOf="@+id/cateogoria_vodka"
        app:layout_constraintStart_toStartOf="@+id/cateogoria_vodka"
        app:layout_constraintTop_toTopOf="@+id/cateogoria_gin"
        app:srcCompat="@drawable/no_alcohol2" />

    <TextView
        android:id="@+id/category_title"
        android:layout_width="244dp"
        android:layout_height="47dp"
        android:layout_marginBottom="55dp"
        android:gravity="center"
        android:text="@string/tittle_category"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/cateogoria_ron"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView_rum"
        android:layout_width="120dp"
        android:layout_height="26dp"
        android:text="@string/Rum"
        android:gravity="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/cateogoria_gin"
        app:layout_constraintEnd_toEndOf="@+id/cateogoria_ron"
        app:layout_constraintStart_toStartOf="@+id/cateogoria_ron"
        app:layout_constraintTop_toBottomOf="@+id/cateogoria_ron" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Vodka"
        android:gravity="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/cateogoria_sin"
        app:layout_constraintEnd_toEndOf="@+id/cateogoria_vodka"
        app:layout_constraintStart_toStartOf="@+id/cateogoria_vodka"
        app:layout_constraintTop_toBottomOf="@+id/cateogoria_vodka" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Gin"
        android:gravity="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/cateogoria_gin"
        app:layout_constraintStart_toStartOf="@+id/cateogoria_gin"
        app:layout_constraintTop_toBottomOf="@+id/cateogoria_gin" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/category_Non_Alcoholic"
        android:gravity="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/cateogoria_sin"
        app:layout_constraintStart_toStartOf="@+id/cateogoria_sin"
        app:layout_constraintTop_toBottomOf="@+id/cateogoria_sin" />

</androidx.constraintlayout.widget.ConstraintLayout>
