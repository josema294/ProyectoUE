<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">


        <!--To DO cambiar descripcion por Strings.xml -->
    <ImageButton
        android:id="@+id/cateogoria_ron"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/ron"
        android:scaleType="center"
        android:layout_weight="1"
        android:layout_marginVertical="10sp"
        android:contentDescription="@string/Rum" />

    <TextView
        android:id="@+id/textRon"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:clickable="true"
        android:gravity="center"
        android:text="@string/Rum"
        android:textColorHighlight="@color/black"
        android:textSize="18sp"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageButton
        android:id="@+id/cateogoria_gin"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/gin"
        android:scaleType="center"
        android:layout_weight="1"
        android:layout_marginVertical="10sp"
        android:contentDescription="@string/Gin" />

    <TextView
        android:id="@+id/textGin"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:clickable="true"
        android:gravity="center"
        android:text="@string/Gin"
        android:textColorHighlight="@color/black"
        android:textSize="18sp"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageButton
        android:id="@+id/cateogoria_vodka"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/vodka"
        android:scaleType="center"
        android:layout_weight="1"
        android:layout_marginVertical="10sp"
        android:contentDescription="@string/Vodka" />

    <TextView
        android:id="@+id/textVodka"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:clickable="true"
        android:gravity="center"
        android:text="@string/Vodka"
        android:textColorHighlight="@color/black"
        android:textSize="18sp"
        tools:ignore="TouchTargetSizeCheck" />


    <ImageButton
        android:id="@+id/cateogoria_sin"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/no_alcohol"
        android:scaleType="center"
        android:layout_weight="1"
        android:layout_marginVertical="10sp"
        android:contentDescription="@string/Without" />

    <TextView
        android:id="@+id/categoria_sin"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:clickable="true"
        android:gravity="center"
        android:text="@string/Without"
        android:textColorHighlight="@color/black"
        android:textSize="18sp"
        tools:ignore="TouchTargetSizeCheck" />


</LinearLayout>
