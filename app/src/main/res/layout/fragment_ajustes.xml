<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu.AjustesFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_ajustes"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <CheckBox
            android:id="@+id/checkBox_modo_oscuro"
            android:layout_width="183dp"
            android:layout_height="48dp"
            android:text="@string/checkbox_dark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.118"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.095" />

        <TextView
            android:id="@+id/textView_modo_oscuro"
            android:layout_width="170dp"
            android:layout_height="48dp"
            android:layout_marginStart="12dp"
            android:text="@string/modo_oscuro"
            app:layout_constraintBottom_toBottomOf="@+id/checkBox_modo_oscuro"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/checkBox_modo_oscuro"
            app:layout_constraintTop_toTopOf="@+id/checkBox_modo_oscuro"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textViewIdiomas"
            android:layout_width="71dp"
            android:layout_height="32dp"
            android:layout_marginTop="60sp"
            android:textColor="@color/black"
            android:text="@string/txtInglÃ©s"
            app:layout_constraintEnd_toEndOf="@+id/checkBox_modo_oscuro"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/checkBox_modo_oscuro" />

        <TextView
            android:id="@+id/textView_idiomas"
            android:layout_width="164sp"
            android:layout_height="55sp"
            android:layout_marginTop="40dp"
            android:text="@string/selector_idiomas"
            app:layout_constraintBottom_toBottomOf="@+id/textViewIdiomas"
            app:layout_constraintEnd_toEndOf="@+id/textView_modo_oscuro"
            app:layout_constraintHorizontal_bias="0.885"
            app:layout_constraintStart_toEndOf="@+id/textViewIdiomas"
            app:layout_constraintTop_toBottomOf="@+id/textView_modo_oscuro"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView_version"
            android:layout_width="368dp"
            android:layout_height="80dp"
            android:text="@string/app_version"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/textView_idiomas"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textViewIdiomas"
            app:layout_constraintTop_toBottomOf="@+id/textViewIdiomas"
            app:layout_constraintVertical_bias="0.194"
            tools:text="@string/app_version" />


        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animationViewSettings"
            android:layout_width="414dp"
            android:layout_height="320dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_version"
            app:layout_constraintVertical_bias="0.0"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/animation_settigs"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>





</FrameLayout>