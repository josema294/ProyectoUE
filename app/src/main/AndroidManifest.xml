<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"

        android:supportsRtl="true"
        android:theme="@style/Theme.DAMeuncoctel"
        tools:targetApi="33">

        <activity
            android:name=".splash.SplashScreenActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".resultado.ResultadoActivity"
            android:exported="false"
            android:theme="@style/Theme.DAMeuncoctel.NoActionBar"
            />
        <activity
            android:name=".coctel.CoctelActivity"
            android:exported="true"
            android:label="@string/title_activity_coctel"
            android:theme="@style/Theme.DAMeuncoctel.NoActionBar"></activity>
        <activity
            android:name=".menu.MenuActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.DAMeuncoctel.NoActionBar"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".login.ActivityLogin"
            android:exported="true"></activity>
        <activity
            android:name=".home.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.DAMeuncoctel.NoActionBar"

            android:windowSoftInputMode="adjustPan">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
    </application>

</manifest>